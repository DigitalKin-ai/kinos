{
    "default_base_path": "~/KinOS_Missions",
    "missions": {
        "example_mission": {
            "base_path": "/custom/path/to/missions",
            "description": "Example mission with custom path"
        }
    },
    "path_validation": {
        "allow_outside_project": true,
        "require_explicit_base_path": false,
        "allowed_base_paths": [
            "~/KinOS_Missions",
            "/projects/missions",
            "/home/user/missions"
        ]
    },
    "path_security": {
        "max_path_depth": 5,
        "forbidden_characters": ["<", ">", ":", "\"", "/", "\\", "|", "?", "*"],
        "reserved_names": ["CON", "PRN", "AUX", "NUL"]
    }
}
